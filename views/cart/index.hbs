{{#if showMsg}}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Success!</strong> {{Msg}}
</div>
{{/if}} {{#if ErrMsg}}
<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Error!</strong> {{Msg}}
</div>
{{/if}}
<div class="container sp">
    <div class="col-md-8">
        <div class="col-md-12">
            <div class="col-md-6">
                <span>Sản phẩm</span>
                <a href="#"> </a>
            </div>
            <div class="col-md-3">
                <span>Giá </span>
            </div>
            <div class="col-md-3">
                <span>Số lượng</span>
            </div>


        </div>
        {{#each items}}

        <div class="col-md-12">
            <div class="col-md-12">

                <hr />
            </div>
            <div class="col-md-6">

                <img src="/{{hinh}}" style="width:20%;margin-top: -10px;float:left" />
                <!--<a href="#" ></a>-->
                <h4 class="text-left"> &emsp; Tên Sách: {{ten_sach}}</h4>

            </div>
            <div class="col-md-3">
                {{number_format giaBan}} đ
            </div>
            <div class="col-md-3">
                <form action="/cart/sl" method="POST">
                    <input type="number" name="sl" value="{{sl}}" class="ip" style="padding-left:30px;margin-top: 0px;width:50%" />
                    <input type="text" name="idSach" value="{{idSach}}" class="hidden">
                    <button style="border:none" type="submit" class="btn btn-default btn-custom1 btn-item-delete " data-item-id="12467471">
                        <img src="/img/update.png" alt="" style="width:20px">
                    </button>
                </form>
            </div>

            <div class="col-md-1">
                <form action="" method="POST">
                    <input type="text" name="idSach" value="{{idSach}}" class="hidden">
                    <button type="submit">
                        <img src="" alt="">
                    </button>


                </form>

            </div>
        </div>
        {{/each}}
    </div>
    <div class="col-md-4">
        <form action="/cart/tt" method="POST">

            <div class="row">
                <div class="col-md-12">
                    <h4 class="text-left">Thanh toán và vận chuyển</h4>
                    <span>Giao hàng tới</span>
                    <a href="/account/edit-info" class="right">Sửa đổi</a>
                    <p>Địa Chỉ: {{diaChi}}
                        <br />Số Điện Thoại: {{SDT}}</p>
                    <h4 class="text-left">Thông tin đơn hàng</h4>
                    <span>Tạm tính ({{items.length}} sản phẩm)</span>
                    <span class="right">{{number_format total}} đ </span>
                    <div>
                        <span>Phí giao hàng</span>
                        <span class="right">free</span>
                    </div>
                    <hr />
                    <span>Tổng cộng:</span>
                    <span style="color:red!important;" class="right">{{number_format total}}đ</span>
                    <hr />
                    <span>Đã bao gồm VAT(nếu có)</span>
                    <button style="width:100%" type="submit" class="next-btn next-btn-primary next-btn-large">TIẾN HÀNH THANH TOÁN</button>
                </div>
            </div>
        </form>
    </div>
</div>